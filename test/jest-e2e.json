{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "maxWorkers": 1,
  "randomize": true,
  "detectOpenHandles": true,
  "verbose": true,
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1",
    "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
  },
  "roots": ["<rootDir>/apps/", "<rootDir>/test/"]
}
